<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ma.digital_student_report.Main2Activity"
    android:orientation="vertical"
    android:weightSum="1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/level1_1ButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEVEL 1-1"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:layout_weight="0.04" />

            <Button
                android:id="@+id/level1_2ButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEVEL 1-2"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:layout_weight="0.04" />

            <Button
                android:id="@+id/level2_1ButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEVEL 2-1"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:layout_weight="0.04" />

            <Button
                android:id="@+id/level2_2ButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEVEL 2-2"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:layout_weight="0.04" />

            <Button
                android:id="@+id/level3_1ButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEVEL 3-1"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:layout_weight="0.04" />

            <Button
                android:id="@+id/level3_2ButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEVEL 3-2"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:layout_weight="0.04" />

            <Button
                android:id="@+id/level4_1ButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEVEL 4-1"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:layout_weight="0.04" />
            <Button
                android:id="@+id/level4_2ButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEVEL 4-2"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:layout_weight="0.04" />




        </LinearLayout>
    </ScrollView>
</LinearLayout>
